<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:padding="10dp"
            android:shape="rectangle">

            <stroke
                android:width="1dip"
                android:color="#8ab" />

            <solid android:color="#fff" />

            <padding
                android:top="12dp"
                android:left="12dp"
                android:right="12dp"
                android:bottom="12dp" />

            <corners
                android:bottomLeftRadius="22dip"
                android:bottomRightRadius="2dip"
                android:topLeftRadius="12dip"
                android:topRightRadius="22dip" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="1dp"
        android:top="0dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#fff"/>
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>