<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    tools:context=".LoginActivity">


    <LinearLayout
        android:id="@+id/login_page_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:padding="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/chat_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/main_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="MyMooChat"
            android:layout_marginBottom="70dp"
            android:textColor="#ffffff"
            android:fontFamily="casual"
            android:textStyle="italic"
            android:textSize="30sp" />



        <LinearLayout
            android:id="@+id/signin_layout"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="#4B0082">

            <ImageView
                android:id="@+id/name_icon"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/input_mail_icon" />

            <Button
                android:id="@+id/sign_in_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4B0082"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/sign_in"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2.4"
            android:background="#ffffff" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/or"
                android:textColor="#ffffff" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1.6"
                android:background="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@android:color/holo_red_dark">

            <ImageView
                android:id="@+id/new_ac_icon"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/user_avatar" />

            <Button
                android:id="@+id/create_new_ac"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_dark"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/create_new_account"
                android:textColor="#ffffff" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>