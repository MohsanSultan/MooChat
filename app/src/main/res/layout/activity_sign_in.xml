<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_wall"
    tools:context=".SignInActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/main_page_toolbar"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_below="@+id/main_page_toolbar"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/login_register" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/signin_email"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="#F8F8FF"
        app:backgroundTint="#F8F8FF"
        android:textColorHint="#F8F8FF" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/signin_pass"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/password_for_mymoochat"
        android:inputType="textPassword"
        android:textColor="#F8F8FF"
        app:backgroundTint="#F8F8FF"
        android:textColorHint="#F8F8FF" />

    <Button
        android:id="@+id/signin_btn"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/colorAccent"
        android:text="@string/login"
        android:textColor="#F8F8FF" />



</RelativeLayout>