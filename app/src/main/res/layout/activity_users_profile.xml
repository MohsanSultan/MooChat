<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".UsersProfileActivity">


    <ImageView
        android:id="@+id/user_profile_img_thumb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        app:srcCompat="@drawable/user_avatar" />

    <TextView
        android:id="@+id/user_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_profile_img_thumb"
        android:text="Name"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_30ssp" />

    <TextView
        android:id="@+id/user_profile_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_status"
        android:layout_below="@+id/user_profile_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp" />

    <TextView
        android:id="@+id/user_profile_total_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_friends"
        android:layout_below="@+id/user_profile_status"
        android:textAlignment="center"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12ssp" />

    <Button
        android:id="@+id/profile_send_req_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:text="@string/send_friend_request"
        android:layout_below="@+id/user_profile_total_friends"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_13ssp" />

    <Button
        android:id="@+id/profile_decline_req_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:text="@string/decline_friend_request"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_below="@+id/profile_send_req_btn"
        android:textSize="@dimen/_13ssp" />



</RelativeLayout>